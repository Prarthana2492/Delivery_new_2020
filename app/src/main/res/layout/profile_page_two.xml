<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        >


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_go_back_left_arrow_"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/white_text"
            android:id="@+id/lang_title" />

        <!--
                  </android.support.v7.widget.Toolbar>
        -->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@color/bg_black"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Details"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/segoeui"
            android:textStyle="bold"
            android:textColor="@color/grey_text_color"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/bg_black"
            android:layout_below="@id/profile_layout"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"


                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/language_border"
                    android:paddingVertical="15dp"
                    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="15dp"
                    android:layout_gravity="center_vertical"

                    >



                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account holder Name"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/grey_text_color"
                        android:textAllCaps="true"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/aname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keerthana"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/segoeui"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white_text"
                        />




                </LinearLayout>



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Number"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/grey_text_color"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/acc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1026123323111"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white_text"
                    android:layout_marginTop="5dp"
                    />




                <TextView
                    android:id="@+id/rewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/grey_text_color"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="true"
                    />

                <TextView

                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hdfc"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white_text"
                    android:layout_marginTop="5dp"
                    />




                <TextView
                    android:id="@+id/login_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch ifsc code"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/grey_text_color"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hdfc12345"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white_text"
                    android:layout_marginTop="5dp"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pan card number"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/grey_text_color"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/pan_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PANC0123"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white_text"
                    android:layout_marginTop="5dp"
                    />
                </LinearLayout>


                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/seperator"
                     android:layout_marginTop="10dp"
                     />-->

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPI Payment details"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/grey_text_color"
                    android:textAllCaps="true"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/language_border"
                android:paddingVertical="15dp"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Personal UPI handle"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/grey_text_color"
                    android:textSize="16dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white_text"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>
